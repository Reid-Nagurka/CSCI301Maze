<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="reidnagurka.cs301.cs.wm.edu.amazebyreidnagurka.amazebyreidnagurka.ui.FinishActivity">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/congrats"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="250dp" />

        <TextView
            android:id="@+id/energyConsumptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/congrats"
            android:layout_alignStart="@+id/congrats"
            android:layout_below="@+id/congrats"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="38dp"
            android:text="Total Energy Consumption: "
            android:textSize="15dp" />

        <TextView
            android:id="@+id/pathLengthText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/energyConsumptionText"
            android:layout_alignStart="@+id/energyConsumptionText"
            android:layout_below="@+id/energyConsumptionText"
            android:layout_marginTop="38dp"
            android:text="Total Path Length: "
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/victoryImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:src="@mipmap/won_image_foreground" />

        <Button
            android:id="@+id/restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pathLengthText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:onClick="playAgainHandler"
            android:text="Play Again!" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
