<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="reidnagurka.cs301.cs.wm.edu.amazebyreidnagurka.amazebyreidnagurka.ui.GeneratingActivity">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/generatingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="161dp"
            android:textSize="30sp"
            tools:text="Now Generating Maze" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/generatingText"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"

            android:progress="@android:integer/config_shortAnimTime" />

        <TextView
            android:id="@+id/noteToGraderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/progressBar"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/progressBar"
            android:layout_marginBottom="90dp"
            android:text="Mock Generating for P6" />

        <ImageView
            android:id="@+id/insideMazePic"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:src="@mipmap/inside_maze_foreground" />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
